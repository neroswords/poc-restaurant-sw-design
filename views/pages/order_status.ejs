    />

    <style>
      body {
      }
      .container {
        max-width: 1200px;
        margin-top: 50px;
      }
      .column {
        border: 0px solid #dee2e6;
        border-radius: 12px;
        background-color: #ebebe9;
        padding: 10px;
        /* margin-right: 8px; */
        min-height: 300px;
      }
      .column-header {
        font-size: 16px;
        margin-bottom: 8px;
      }
      .task-card {
        margin-bottom: 8px;
        padding: 10px;
        background-color: #fff;
        border-radius: 14px;
        cursor: grab;
      }
    </style>
  </head>
  <body
    style="
      color: #353535;
      background-color: #f5f5f5;
      font-family: 'Sarabun', sans-serif;
    "
  >
    <div class="container">
      <div
        style="
          border: #e9e9e9 1px;
          border-bottom-style: solid;
          margin-bottom: 18px;
        "
      >
        <p style="font-size: 24px; font-weight: 300; margin-bottom: 15px">
          รายการอาหาร
        </p>
      </div>
      <div class="row">
        <!-- To Do Column -->
        <div class="col-md-4" style="padding-right: 0px">
          <div
            class="column"
            ondrop="drop(event, 'todoTasks')"
            ondragover="allowDrop(event)"
          >
            <h2 class="column-header">ยังไม่ได้ทำ</h2>
            <div class="task-list" id="todoTasks"></div>
          </div>
        </div>

        <!-- In Progress Column -->
        <div class="col-md-4" style="padding-right: 0px">
          <div
            class="column"
            ondrop="drop(event, 'inProgressTasks')"
            ondragover="allowDrop(event)"
          >
            <h2 class="column-header">กำลังทำ</h2>
            <div class="task-list" id="inProgressTasks"></div>
          </div>
        </div>

        <!-- Done Column -->
        <div class="col-md-4">
          <div
            class="column"
            ondrop="drop(event, 'doneTasks')"
            ondragover="allowDrop(event)"
          >
            <h2 class="column-header">เสร็จสิ้น</h2>
            <div class="task-list" id="doneTasks"></div>
          </div>
        </div>
      </div>
    </div>

    <script>
      var tasks = [
        {
          id: 1,
          title: "ก๋วยเตี๋ยวผัด",
          amount: "1",
          img: "https://thecozycook.com/wp-content/uploads/2021/12/Ramen-Noodle-Stir-Fry-.jpg",
          status: "todo",
        },
        {
          id: 2,
          title: "ก๋วยเตี๋ยวผัด",
          amount: "1",
          img: "https://thecozycook.com/wp-content/uploads/2021/12/Ramen-Noodle-Stir-Fry-.jpg",
          status: "todo",
        },
        {
          id: 3,
          title: "ก๋วยเตี๋ยวผัด",
          amount: "1",
          img: "https://thecozycook.com/wp-content/uploads/2021/12/Ramen-Noodle-Stir-Fry-.jpg",
          status: "inProgress",
        },
        {
          id: 4,
          title: "กุ้งทอด",
          amount: "1",
          img: "https://khinskitchen.com/wp-content/uploads/2023/08/prawn-tempura-03.jpg",
          status: "inProgress",
        },
        {
          id: 5,
          title: "กุ้งทอด",
          amount: "2",
          img: "https://khinskitchen.com/wp-content/uploads/2023/08/prawn-tempura-03.jpg",
          status: "inProgress",
        },
        {
          id: 6,
          title: "หมูทอด",
          amount: "1",
          img: "https://poshjournal.com/wp-content/uploads/2020/05/tonkatsu-japanese-pork-cutlet-2.jpg",
          status: "done",
        },
        {
          id: 7,
          title: "ก๋วยเตี๋ยวผัด",
          amount: "1",
          img: "https://thecozycook.com/wp-content/uploads/2021/12/Ramen-Noodle-Stir-Fry-.jpg",
          status: "done",
        },
        {
          id: 8,
          title: "ก๋วยเตี๋ยวผัด",
          amount: "2",
          img: "https://thecozycook.com/wp-content/uploads/2021/12/Ramen-Noodle-Stir-Fry-.jpg",
          status: "done",
        },
        {
          id: 9,
          title: "กุ้งทอด",
          amount: "1",
          img: "https://khinskitchen.com/wp-content/uploads/2023/08/prawn-tempura-03.jpg",
          status: "done",
        },
      ];

      tasks.forEach(function (task) {
        addTaskToBoard(task);
      });

      function addTaskToBoard(task) {
        var taskCard = document.createElement("div");
        taskCard.className = "task-card";
        taskCard.id = `task${task.id}`;
        taskCard.setAttribute("draggable", "true");
        taskCard.addEventListener("dragstart", function (event) {
          event.dataTransfer.setData("text/plain", event.target.id);
        });
        taskCard.innerHTML = `<div style="display:flex;"><img style="width: 45px;height:45px;border-radius: 12px;aspect-ratio: 1 / 1;object-fit: cover;margin-right:12px" src="${
          task.img ?? `https://via.placeholder.com/200`
        }"><div style="flex:1;display:flex;justify-content: space-between;"><p>${
          task.title
        }</p><p>จำนวน ${task.amount}</p></div></div></div>`;

        var columnId;
        switch (task.status) {
          case "todo":
            columnId = "todoTasks";
            break;
          case "inProgress":
            columnId = "inProgressTasks";
            break;
          case "done":
            columnId = "doneTasks";
            break;
          default:
            columnId = "todoTasks";
        }

        document.getElementById(columnId).appendChild(taskCard);
      }

      // var taskCards = document.querySelectorAll('.task-card');
      // taskCards.forEach(function(taskCard) {
      //     taskCard.setAttribute('draggable', 'true');
      //     taskCard.addEventListener('dragstart', function(event) {
      //         event.dataTransfer.setData("text/plain", event.target.id);
      //     });
      // });

      function allowDrop(event) {
        event.preventDefault();
      }

      function drop(event, columnId) {
        event.preventDefault();
        var taskId = event.dataTransfer.getData("text/plain");
        var taskElement = document.getElementById(taskId);
        var column = document.getElementById(columnId);
        column.appendChild(taskElement);
      }
    </script>
  </body>
</html>
