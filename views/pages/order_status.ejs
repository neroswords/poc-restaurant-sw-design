<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>All Orders</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<style>
    body {
        background-color: #f8f9fa;
    }
    .container {
        max-width: 1200px;
        margin-top: 50px;
    }
    .column {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        background-color: #fff;
        padding: 10px;
        margin-right: 20px;
        min-height: 300px;
    }
    .column-header {
        font-weight: bold;
        margin-bottom: 15px;
    }
    .task-card {
        margin-bottom: 15px;
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
        cursor: grab;
    }
</style>
</head>
<body>

<div class="container">
    <div class="row">
        <!-- To Do Column -->
        <div class="col-md-4">
            <div class="column" ondrop="drop(event, 'todoTasks')" ondragover="allowDrop(event)">
                <h2 class="column-header">To Do</h2>
                <div class="task-list" id="todoTasks">
                </div>
            </div>
        </div>
        
        <!-- In Progress Column -->
        <div class="col-md-4">
            <div class="column" ondrop="drop(event, 'inProgressTasks')" ondragover="allowDrop(event)">
                <h2 class="column-header">In Progress</h2>
                <div class="task-list" id="inProgressTasks"></div>
            </div>
        </div>
        
        <!-- Done Column -->
        <div class="col-md-4">
            <div class="column" ondrop="drop(event, 'doneTasks')" ondragover="allowDrop(event)">
                <h2 class="column-header">Done</h2>
                <div class="task-list" id="doneTasks"></div>
            </div>
        </div>
    </div>
</div>

<script>
    var tasks = [
        { id: 1, title: 'Food 1', description: 'Table1', status: 'todo' },
        { id: 2, title: 'Food 2', description: 'Table1', status: 'todo' },
        { id: 3, title: 'Food 3', description: 'Table1', status: 'inProgress' },
        { id: 4, title: 'Food 4', description: 'Table2', status: 'inProgress' },
        { id: 5, title: 'Food 5', description: 'Table2', status: 'inProgress' },
        { id: 6, title: 'Food 6', description: 'Table2', status: 'done' },
        { id: 7, title: 'Food 7', description: 'Table2', status: 'done' },
        { id: 8, title: 'Food 8', description: 'Table2', status: 'done' },
        { id: 9, title: 'Food 9', description: 'Table2', status: 'done' },
    ];

    tasks.forEach(function(task) {
        addTaskToBoard(task);
    });

    function addTaskToBoard(task) {
        var taskCard = document.createElement('div');
        taskCard.className = 'task-card';
        taskCard.id = `task${task.id}`
        taskCard.setAttribute('draggable', 'true');
        taskCard.addEventListener('dragstart', function(event) {
            event.dataTransfer.setData("text/plain", event.target.id);
        });
        taskCard.innerHTML = `<p>${task.title}</p><p>${task.description}</p>`;

        var columnId;
        switch (task.status) {
            case 'todo':
                columnId = 'todoTasks';
                break;
            case 'inProgress':
                columnId = 'inProgressTasks';
                break;
            case 'done':
                columnId = 'doneTasks';
                break;
            default:
                columnId = 'todoTasks';
        }

        document.getElementById(columnId).appendChild(taskCard); 
    }

    // var taskCards = document.querySelectorAll('.task-card');
    // taskCards.forEach(function(taskCard) {
    //     taskCard.setAttribute('draggable', 'true');
    //     taskCard.addEventListener('dragstart', function(event) {
    //         event.dataTransfer.setData("text/plain", event.target.id);
    //     });
    // });

    function allowDrop(event) {
        event.preventDefault();
    }

    function drop(event, columnId) {
        event.preventDefault();
        var taskId = event.dataTransfer.getData("text/plain");
        var taskElement = document.getElementById(taskId);
        var column = document.getElementById(columnId);
        column.appendChild(taskElement);
    }
</script>
</body>
</html>